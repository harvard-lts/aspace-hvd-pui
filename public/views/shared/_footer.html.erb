<div class="container-fluid panel-footer">
  <div class="row">
    <div class="col-md-6 col-sm-6 footer-left">
      <div class="row">
        <%= t('footer.aspace', :link => "http://archivesspace.org", :text=> 'ArchivesSpace').html_safe %>
        <%= ASConstants.VERSION %>
      </div>
      <div class="row">
        <%= t('footer.copyright').html_safe %>
      </div>
    </div>

    <div class="col-md-6 col-sm-6 footer-right">
      <div class="row">
        <span class="footerItem"><% if AppConfig[:digital_accessibility_link] && !AppConfig[:digital_accessibility_link].blank? %><a id='digitalAccessibilityLink' href='<%= AppConfig[:digital_accessibility_link]%>'><%= t('footer.accessibility') %></a><% end %></span>
        <span class="footerItem"><% if AppConfig[:privacy_link] && !AppConfig[:privacy_link].blank? %><a id='privacyLink' href='<%= AppConfig[:privacy_link]%>'><%= t('footer.privacy') %></a><% end %></span>
        <span class="footerItem"><% if AppConfig[:harmful_language_statement_link] && !AppConfig[:harmful_language_statement_link].blank? %><a id='harmfulLanguageLink' href='<%= AppConfig[:harmful_language_statement_link]%>'><%= t('footer.harmful_language_statement') %></a><% end %></span>
      </div>
      <div class="row">
        <span class="footerItem"><% if AppConfig[:pui_feedback_link] && !AppConfig[:pui_feedback_link].blank? %>
          <%= form_with url: AppConfig[:pui_feedback_link], method: :post, authenticity_token: false, html: {target: '_blank', style: 'display:inline'}  do |form| %>
            <% unless @result.blank? || @result.is_a?(Hash) || %w|archival_object digital_object resource|.none?(@result.primary_type) %>
              <%= form.hidden_field :Repository, value: @result.repository_information['top']['name'] %>
              <%= form.hidden_field :CallNumber, value: @result.identifier %>
              <%= if title = @result.resolved_resource.dig('title')
                form.hidden_field(:CollectionTitle, value: title)
              else
                ''
              end %>
              <%= form.hidden_field :ASpaceUrl, value: request.original_url %>
            <% end %>
            <%= form.submit t('footer.pui_feedback'), style: 'background:none;border:none;margin:none;' %>
          <% end %>
        <% end %></span>
        <span class="footerItem"><% if AppConfig[:pui_help_link] && !AppConfig[:pui_help_link].blank? %><a id='aspaceHelpLink' href='<%= AppConfig[:pui_help_link]%>'><%= t('footer.help') %></a> <% end %></span>
      </div>
    </div>
  </div>
</div>
